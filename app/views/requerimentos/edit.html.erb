<% provide(:title, "Edição de Requerimento") %>
<h1>Avalie o Requerimento</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@requerimento) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :descricao, placeholder: "Detalhes do requerimento" %>
        <%= f.collection_select :opcao_requerimento_id, OpcaoRequerimento.order(:nome),:id,:nome, include_blank: false %>
        <%= f.collection_select :status_requerimento_id, StatusRequerimento.order(:nome),:id,:nome, include_blank: false %>
      </div>
      <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>