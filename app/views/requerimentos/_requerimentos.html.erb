<% if @requerimentos_requeridos.any? %>
  <li>
    <%= link_to "Editar", 
                  edit_requerimentos_path(requerimentos_requeridos) %>
    <span class="descricao"><%= requerimentos_requeridos.descricao %></span>
    <span class="timestamp">
      Criado a <%= time_ago_in_words(requerimentos_requeridos.data_criacao) %> atrás.
    </span>
  </li>
<% end %>
