<% if @usuario.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulario contem <%= pluralize(@usuario.errors.count, "erro") %>.
    </div>
    <ul>
    <% @usuario.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>